// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  username String @unique
  password String
  email String @unique
}


model Book {
  id String @id @default(cuid())
  name String
  description String
  type BookType[]
}

model BookToType {
  bookId String
  typeName String
  @@id([bookId,typeName])
}

model BookType {
  type String @id
  books Book[]
}